    /*onLoad show microblog block if it was shown before*/
    function applyConfig() {
        var ele = document.getElementById("twitterdiv");
	var twitter=readCookie("twitter");
        if (twitter=="block") {
            ele.style.display = "block";
        };
        var ele = document.getElementsByClassName("dot");
        var dot=readCookie("dot");
	if (dot=="block") {
	  for(var i=0,j=ele.length; i<j; i++)
	  (ele[i].style.display = "block")
	};
        var ele = document.getElementsByClassName("spanish");
        var spanish=readCookie("spanish");
	if (spanish=="block") {
	  for(var i=0,j=ele.length; i<j; i++)
	  (ele[i].style.display = "block")
	};
        var ele = document.getElementsByClassName("polish");
        var spanish=readCookie("polish");
	if (spanish=="block") {
	  for(var i=0,j=ele.length; i<j; i++)
	  (ele[i].style.display = "block")
	};
        var ele = document.getElementsByClassName("portuguese");
        var portuguese=readCookie("portuguese");
	if (portuguese=="block") {
	  for(var i=0,j=ele.length; i<j; i++)
	  (ele[i].style.display = "block")
	};
        var ele = document.getElementsByClassName("news");
        var news=readCookie("news");
	if (news=="block") {
	  for(var i=0,j=ele.length; i<j; i++)
	  (ele[i].style.display = "block")
	};
        var ele = document.getElementsByClassName("user");
        var user=readCookie("user");
	if (user=="block") {
	  for(var i=0,j=ele.length; i<j; i++)
	  (ele[i].style.display = "block")
	};
    }
