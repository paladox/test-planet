    <script language="javascript"> 

//In Mozilla, WebKit(?) Coming in IE9, in HTML5
if (document.addEventListener) {
        document.addEventListener("DOMContentLoaded", applyConfig, false);
}

function createCookie(name,value,days) {
        if (days) {
                var date = new Date();
                date.setTime(date.getTime()+(days*24*60*60*1000));
                var expires = "; expires="+date.toGMTString();
        }
        else var expires = "";
        document.cookie = name+"="+value+expires+"; path=/";
}

function readCookie(name) {
        var nameEQ = name + "=";
        var ca = document.cookie.split(';');
        for(var i=0;i < ca.length;i++) {
                var c = ca[i];
                while (c.charAt(0)==' ') c = c.substring(1,c.length);
                if (c.indexOf(nameEQ) == 0) return c.substring(nameEQ.length,c.length);
        }
        return null;
}

function eraseCookie(name) {
        createCookie(name,"",-1);
}

    function toggle() {
        var ele = document.getElementById("feeddiv");
        if(ele.style.display == "block") {
                ele.style.display = "none";
        }
        else {
                ele.style.display = "block";
        }
    } 

    function toggleaddme() {
        var ele = document.getElementById("addme");
        if(ele.style.display == "block") {
                ele.style.display = "none";
        }
        else {
                ele.style.display = "block";
        }
    } 

    function toggleconfig() {
        var ele = document.getElementById("config");
        if(ele.style.display == "block") {
                ele.style.display = "none";
        }
        else {
                ele.style.display = "block";
        }
    } 

    function togglemicroblog() {
        var ele = document.getElementById("twitterdiv");
        if(ele.style.display == "block") {
                ele.style.display = "none";
                eraseCookie("twitter")
        }
        else {
                ele.style.display = "block";
                createCookie("twitter","block",360)
        }
    } 

    function toggledot() {
        var ele = document.getElementsByClassName("dot");
	for(var i=0,j=ele.length; i<j; i++)
        if(ele[i].style.display == "block") {
                ele[i].style.display = "none";
                eraseCookie("dot")
        }
        else {
                ele[i].style.display = "block";
                createCookie("dot","block",360)
        }
    } 

    function togglespanish() {
        var ele = document.getElementsByClassName("spanish");
	for(var i=0,j=ele.length; i<j; i++)
        if(ele[i].style.display == "block") {
                ele[i].style.display = "none";
                eraseCookie("spanish")
        }
        else {
                ele[i].style.display = "block";
                createCookie("spanish","block",360)
        }
    } 

    function togglepolish() {
        var ele = document.getElementsByClassName("polish");
	for(var i=0,j=ele.length; i<j; i++)
        if(ele[i].style.display == "block") {
                ele[i].style.display = "none";
                eraseCookie("polish")
        }
        else {
                ele[i].style.display = "block";
                createCookie("polish","block",360)
        }
    } 

    function toggleportuguese() {
        var ele = document.getElementsByClassName("portuguese");
	for(var i=0,j=ele.length; i<j; i++)
        if(ele[i].style.display == "block") {
                ele[i].style.display = "none";
                eraseCookie("portuguese")
        }
        else {
                ele[i].style.display = "block";
                createCookie("portuguese","block",360)
        }
    } 

    function togglenews() {
        var ele = document.getElementsByClassName("news");
	for(var i=0,j=ele.length; i<j; i++)
        if(ele[i].style.display == "block") {
                ele[i].style.display = "none";
                eraseCookie("news")
        }
